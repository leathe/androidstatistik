<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.proj4.MainActivity">

    <TableLayout
        android:layout_width="383dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView_saveNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antal kast:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_saveNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/button_saveNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="button_saveNumber"
                android:text="Börja" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="368dp"
        android:layout_height="361dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/tarning1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/d3" />

            <ImageView
                android:id="@+id/tarning2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/d2" />

            <ImageView
                android:id="@+id/tarning3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/d1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/lock1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLock1"
                android:text="Lås" />

            <Button
                android:id="@+id/lock2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLock2"
                android:text="Lås" />

            <Button
                android:id="@+id/lock3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLock3"
                android:text="lås" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/throwButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onThrow"
                android:text="Kasta!" />
        </TableRow>

    </TableLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="381dp"
        android:layout_height="88dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView_probability"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </FrameLayout>


</android.support.constraint.ConstraintLayout>
